# Disable directory browsing
Options -Indexes

# API rate limiting
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} POST
    RewriteCond %{REQUEST_URI} ^/api/verify\.php
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?yourdomain\.tinyhost\.com [NC]
    RewriteRule .* - [F, L]
</IfModule>

# Password protect admin area
<FilesMatch "^(index\.html)$">
    AuthType Basic
    AuthName "Restricted Area"
    AuthUserFile /home/tiny_XXXXX/.htpasswd
    Require valid-user
</FilesMatch>